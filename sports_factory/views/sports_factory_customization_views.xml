<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sports_product_customization_action" model="ir.actions.act_window">
        <field name="name">Product Customization</field>
        <field name="res_model">sports.factory.customization</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There is no customizations please add some !!
            </p> 
        </field>
    </record>
	<!-- List View -->
	<record id="sports_factory_customization_view_tree" model="ir.ui.view">
		<field name="name">sports.factory.customization.tree</field>
		<field name="model">sports.factory.customization</field>
		<field name="arch" type="xml">
			<tree string="List_View" editable="bottom">
				<field name="name"/>
			</tree>
		</field>
	</record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sports_product_category_action" model="ir.actions.act_window">
        <field name="name">Product Category</field>
        <field name="res_model">sports.factory.product.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There is no product categories, please add some !!
            </p> 
        </field>
    </record>

    <!-- List View -->
	<record id="sports_product_category_view_tree" model="ir.ui.view">
		<field name="name">sports.product.category.tree</field>
		<field name="model">sports.factory.product.category</field>
		<field name="arch" type="xml">
			<tree string="List_View">
				<field name="name"/>
				<field name="sports_type"/>
			</tree>
		</field>
	</record>
</odoo>